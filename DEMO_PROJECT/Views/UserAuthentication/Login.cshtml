@model DEMO_PROJECT.Models.DTO.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Your custom styles here */
    </style>
</head>
<body>
    <h1 style="text-align : center">Login</h1>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"><b>Username</b></label>
                        <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username">
                        <div class="invalid-feedback">
                            <span class="err" asp-validation-for="Username"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"><b>Password</b></label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password">
                        <div class="invalid-feedback">
                            <span asp-validation-for="Password" class="err"></span>
                        </div>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["msg"]
                        </div>
                    }

                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/UserAuthentication/Registration" class="text-alert">Not a user? Signup</a>
                </form>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
